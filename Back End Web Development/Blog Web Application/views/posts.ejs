<%- include('partials/header.ejs') %>

    <main class="container">
        <h1 class="display-4">All Blog Posts</h1>

        <div class="list-group">
            <% if (posts.length> 0) { %>
                <% posts.forEach((post, index)=> { %>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <a href="/blog?postId=<%= index %>" class="text-decoration-none">
                                <h5 class="mb-1">
                                    <%= post.title %>
                                </h5>
                                <p class="mb-1">
                                    <%= post.detail.substring(0, 150) %>...
                                </p>
                                <small class="text-muted">Posted by <%= post.author %> on <%= post.date %></small>
                            </a>
                        </div>
                        <div class="button-group">
                            <a href="/edit-post/<%= index %>" class="btn btn-warning btn-sm">Edit</a>
                            <form action="/delete-post/<%= index %>" method="POST" class="delete-form">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <p>No posts available.</p>
                            <% } %>
        </div>
    </main>

    <%- include('partials/footer.ejs') %>